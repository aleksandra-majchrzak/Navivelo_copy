<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tryhu.navivelo.RegisterActivity"
    android:background="#C0FFA0"
    android:theme="@style/Theme.AppCompat.NoActionBar">


    <TextView
        android:id="@+id/nazwaAplikacji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/chango"
        android:text="NAVIVELO"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
         />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordRegisterText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Zarejestruj się"
         />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nazwaAplikacji"
        android:layout_below="@+id/nazwaAplikacji"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Imię"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/lastNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameText"
        android:layout_below="@+id/nameText"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Nazwisko"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lastNameText"
        android:layout_below="@+id/lastNameText"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Nazwa użytkownika"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lastNameText"
        android:layout_below="@+id/userName"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/passwordRegisterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailText"
        android:layout_below="@+id/emailText"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Hasło"
        android:inputType="textPassword"
        android:singleLine="false"
        android:textColorHint="@android:color/darker_gray" />



</RelativeLayout>
